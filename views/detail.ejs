<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>

            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Contact tidak ada <br><a href="/contact" class="alert-link fw-normal">Kembali Daftar Contact
                        <br></a>
                </div>
                <% } else { %>
                    <div class="card mt-4" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.nama %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.nohp %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %>
                            </p>
                            <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge"
                                onclick="return confirm('Yakin ingin menghapus contact ini ?');">Hapus</a>
                            <a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning badge">Edit</a>
                            <a href=" /contact" class="card-link d-block mt-3">&laquo; kembali</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>